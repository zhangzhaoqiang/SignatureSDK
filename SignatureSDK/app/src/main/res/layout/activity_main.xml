<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_sava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_sava"
        android:text="清空"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_set_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_clear"
        android:text="样式1"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_set_style2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_set_style"
        android:text="样式2"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_set_style3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_set_style2"
        android:text="样式3"
        android:onClick="onClick"/>


    <com.tonghui.signaturelib.PaintView
        android:id="@+id/paintView_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_sava"/>
</RelativeLayout>